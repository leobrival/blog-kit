{
  "name": "blog-spec-kit",
  "version": "0.1.0",
  "description": "CLI pour génération d'articles de blog optimisés par IA avec spec-driven development",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "blog-spec": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target node --format esm",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "blog",
    "cli",
    "ai",
    "spec-driven",
    "content",
    "seo",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^19.2.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "gradient-string": "^3.0.0",
    "ink": "^6.3.1",
    "nanoid": "^5.1.6",
    "ora": "^9.0.0",
    "react": "^19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
