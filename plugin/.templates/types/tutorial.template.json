{
  "$schema": "../schemas/article.schema.json",
  "templateId": "tutorial",
  "version": "1.0.0",
  "name": "Tutorial",
  "description": "Step-by-step technical tutorial with code examples",
  "metadata": {
    "category": "educational",
    "difficulty": "intermediate",
    "estimatedLength": "2000-3500 words",
    "estimatedReadingTime": "8-12 minutes",
    "targetAudience": "developers with basic to intermediate knowledge"
  },
  "structure": {
    "sections": [
      {
        "id": "intro",
        "heading": "Introduction",
        "required": true,
        "level": "h2",
        "description": "Brief overview of what the tutorial covers and learning outcomes",
        "guidelines": [
          "State what the reader will build or learn",
          "Mention prerequisites briefly",
          "Set clear expectations for outcomes"
        ],
        "targetLength": {
          "min": 150,
          "max": 300
        },
        "components": {
          "allowed": ["quotation", "callout"],
          "required": []
        }
      },
      {
        "id": "prerequisites",
        "heading": "Prerequisites",
        "required": true,
        "level": "h2",
        "description": "List of required knowledge, tools, and setup",
        "guidelines": [
          "List specific versions of tools needed",
          "Link to installation guides",
          "Mention required prior knowledge"
        ],
        "targetLength": {
          "min": 100,
          "max": 300
        },
        "components": {
          "allowed": ["callout", "code-block"],
          "required": []
        }
      },
      {
        "id": "steps",
        "heading": "Implementation Steps",
        "required": true,
        "level": "h2",
        "description": "Main tutorial content with numbered steps",
        "guidelines": [
          "Break down into 3-10 clear steps",
          "Each step should have a code example",
          "Explain what each code block does"
        ],
        "subsections": {
          "min": 3,
          "max": 10,
          "pattern": "Step {n}: {description}",
          "level": "h3"
        },
        "components": {
          "allowed": ["code-block", "quotation", "callout", "statistic"],
          "required": ["code-block"]
        }
      },
      {
        "id": "testing",
        "heading": "Testing Your Implementation",
        "required": true,
        "level": "h2",
        "description": "How to verify the implementation works",
        "guidelines": [
          "Provide test commands or scripts",
          "Show expected output",
          "Mention common issues and fixes"
        ],
        "targetLength": {
          "min": 200,
          "max": 400
        },
        "components": {
          "allowed": ["code-block", "callout"],
          "required": ["code-block"]
        }
      },
      {
        "id": "troubleshooting",
        "heading": "Common Issues and Troubleshooting",
        "required": false,
        "level": "h2",
        "description": "Solutions to common problems",
        "guidelines": [
          "List 3-5 common issues",
          "Provide clear solutions",
          "Link to additional resources"
        ],
        "components": {
          "allowed": ["callout", "code-block"],
          "required": []
        }
      },
      {
        "id": "conclusion",
        "heading": "Conclusion and Next Steps",
        "required": true,
        "level": "h2",
        "description": "Summary and suggestions for further learning",
        "guidelines": [
          "Recap what was learned",
          "Suggest 2-3 next steps or improvements",
          "Link to related tutorials or documentation"
        ],
        "targetLength": {
          "min": 150,
          "max": 300
        },
        "components": {
          "allowed": ["quotation", "callout"],
          "required": []
        }
      },
      {
        "id": "faq",
        "heading": "Frequently Asked Questions",
        "required": false,
        "level": "h2",
        "description": "Common questions about the tutorial topic",
        "guidelines": [
          "Include 3-5 relevant questions",
          "Provide concise, accurate answers",
          "Focus on tutorial-specific questions"
        ],
        "components": {
          "allowed": ["faq-item"],
          "required": ["faq-item"]
        }
      }
    ]
  },
  "validation": {
    "wordCount": {
      "min": 2000,
      "max": 3500,
      "optimal": 2500
    },
    "seo": {
      "primaryKeyword": {
        "required": true,
        "density": {
          "min": 0.5,
          "max": 2.0
        }
      },
      "secondaryKeywords": {
        "min": 3,
        "max": 5
      },
      "searchIntent": "informational",
      "targetLength": {
        "min": 2000,
        "max": 3500
      },
      "headings": {
        "h2Min": 4,
        "h2Max": 7,
        "h3Min": 3
      }
    },
    "geo": {
      "optimizationLevel": "moderate",
      "requiredMethods": ["cite-sources", "quotations"],
      "optionalMethods": ["statistics"],
      "quotations": {
        "min": 2,
        "max": 4,
        "placement": "intro, steps, or conclusion"
      },
      "statistics": {
        "min": 1,
        "max": 3,
        "placement": "intro or steps"
      },
      "sources": {
        "min": 5,
        "max": 8,
        "types": ["official documentation", "technical blogs", "research papers"]
      },
      "eeeat": {
        "experience": "Show hands-on implementation",
        "expertise": "Demonstrate technical knowledge",
        "authoritativeness": "Cite official documentation",
        "trustworthiness": "Provide working code examples"
      }
    },
    "components": {
      "codeBlock": {
        "min": 3,
        "max": 15,
        "required": true
      },
      "quotation": {
        "min": 2,
        "max": 4
      },
      "callout": {
        "min": 0,
        "max": 5
      },
      "statistic": {
        "min": 0,
        "max": 3
      }
    },
    "structure": {
      "enforceOrder": true,
      "requiredSections": ["intro", "prerequisites", "steps", "testing", "conclusion"],
      "optionalSections": ["troubleshooting", "faq"]
    }
  },
  "constitution": {
    "tone": "p√©dagogique",
    "voiceDo": [
      "Use clear, step-by-step instructions",
      "Explain technical concepts in accessible language",
      "Provide working code examples for each step",
      "Anticipate common mistakes and address them",
      "Use active voice and direct language",
      "Include visual cues (code comments, output examples)"
    ],
    "voiceDont": [
      "Assume advanced knowledge without stating prerequisites",
      "Skip error handling in code examples",
      "Use jargon without explanation",
      "Provide code without context or explanation",
      "Leave readers uncertain about next steps"
    ]
  },
  "examples": [
    {
      "title": "Building a REST API with Node.js and Express",
      "wordCount": 2800,
      "url": "example-url"
    },
    {
      "title": "Setting Up TypeScript with React: Complete Guide",
      "wordCount": 2400,
      "url": "example-url"
    }
  ]
}
