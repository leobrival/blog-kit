{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blog-kit.dev/schemas/meta.json",
  "title": "Article Meta",
  "description": "Article metadata and configuration",
  "type": "object",
  "required": ["slug", "language"],
  "properties": {
    "slug": {
      "type": "string",
      "description": "URL-safe article identifier",
      "pattern": "^[a-z0-9-]+$"
    },
    "language": {
      "type": "string",
      "description": "ISO 639-1 language code",
      "pattern": "^[a-z]{2}$",
      "examples": ["en", "fr", "es", "de"]
    },
    "category": {
      "type": "string",
      "description": "Article category (tutorials, guides, comparisons, etc.)",
      "pattern": "^[a-z-]+$"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Article creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Article last update timestamp"
    },
    "constitution": {
      "type": "object",
      "description": "Article-specific constitution overrides",
      "properties": {
        "tone": {
          "type": "string",
          "enum": ["expert", "p√©dagogique", "convivial", "corporate"],
          "description": "Writing tone"
        },
        "voiceDo": {
          "type": "array",
          "description": "Voice guidelines to follow",
          "items": {
            "type": "string"
          }
        },
        "voiceDont": {
          "type": "array",
          "description": "Voice guidelines to avoid",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
