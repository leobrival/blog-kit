{
  "$schema": "./schemas/article.schema.json",
  "version": "1.0.0",
  "name": "Blog Kit Template Registry",
  "description": "Central registry of article templates, components, and presets",
  "templates": {
    "tutorial": {
      "file": "./types/tutorial.template.json",
      "name": "Tutorial",
      "description": "Step-by-step technical tutorial with code examples",
      "category": "educational",
      "difficulty": "intermediate",
      "estimatedLength": "2000-3500 words",
      "estimatedTime": "8-12 min read",
      "requiredComponents": ["code-block", "quotation"],
      "optionalComponents": ["callout", "statistic", "faq-item"],
      "seoOptimized": true,
      "geoOptimized": true,
      "icon": "üìö",
      "useCases": [
        "Technical how-to guides",
        "Framework/library tutorials",
        "Step-by-step implementations"
      ]
    },
    "guide": {
      "file": "./types/guide.template.json",
      "name": "Complete Guide",
      "description": "Comprehensive guide covering all aspects of a topic",
      "category": "educational",
      "difficulty": "advanced",
      "estimatedLength": "3000-5000 words",
      "estimatedTime": "12-20 min read",
      "requiredComponents": ["quotation", "statistic", "comparison-table"],
      "optionalComponents": ["code-block", "callout", "faq-item"],
      "seoOptimized": true,
      "geoOptimized": true,
      "icon": "üìñ",
      "useCases": [
        "Ultimate guides",
        "Complete reference materials",
        "In-depth explorations"
      ]
    },
    "comparison": {
      "file": "./types/comparison.template.json",
      "name": "Comparison (X vs Y)",
      "description": "Feature-by-feature comparison of tools, frameworks, or approaches",
      "category": "comparison",
      "difficulty": "intermediate",
      "estimatedLength": "1500-2500 words",
      "estimatedTime": "6-10 min read",
      "requiredComponents": ["comparison-table", "quotation"],
      "optionalComponents": ["pros-cons", "statistic", "callout"],
      "seoOptimized": true,
      "geoOptimized": true,
      "icon": "‚öñÔ∏è",
      "useCases": [
        "Tool comparisons (React vs Vue)",
        "Approach comparisons (REST vs GraphQL)",
        "Product comparisons"
      ]
    }
  },
  "components": {
    "code-block": {
      "file": "./components/code-block.json",
      "name": "Code Block",
      "description": "Syntax-highlighted code example with language and filename",
      "category": "content",
      "geoOptimized": false
    },
    "quotation": {
      "file": "./components/quotation.json",
      "name": "Quotation",
      "description": "Expert quote or citation (GEO-optimized)",
      "category": "geo",
      "geoOptimized": true,
      "geoMethod": "quotations"
    },
    "statistic": {
      "file": "./components/statistic.json",
      "name": "Statistic",
      "description": "Data point with source citation (GEO-optimized)",
      "category": "geo",
      "geoOptimized": true,
      "geoMethod": "statistics"
    },
    "citation": {
      "file": "./components/citation.json",
      "name": "Source Citation",
      "description": "External source reference (GEO-optimized)",
      "category": "geo",
      "geoOptimized": true,
      "geoMethod": "cite-sources"
    },
    "comparison-table": {
      "file": "./components/comparison-table.json",
      "name": "Comparison Table",
      "description": "Feature comparison table",
      "category": "data",
      "geoOptimized": false
    },
    "callout": {
      "file": "./components/callout.json",
      "name": "Callout",
      "description": "Highlighted note, tip, warning, or info box",
      "category": "content",
      "geoOptimized": false
    },
    "faq-item": {
      "file": "./components/faq-item.json",
      "name": "FAQ Item",
      "description": "Question and answer pair",
      "category": "content",
      "geoOptimized": true
    },
    "pros-cons": {
      "file": "./components/pros-cons.json",
      "name": "Pros & Cons",
      "description": "Advantages and disadvantages list",
      "category": "data",
      "geoOptimized": false
    }
  },
  "categories": {
    "tutorials": {
      "name": "Tutorials",
      "description": "Step-by-step technical tutorials",
      "defaultTemplate": "tutorial",
      "icon": "üìö"
    },
    "guides": {
      "name": "Guides",
      "description": "Comprehensive guides and references",
      "defaultTemplate": "guide",
      "icon": "üìñ"
    },
    "comparisons": {
      "name": "Comparisons",
      "description": "Tool and approach comparisons",
      "defaultTemplate": "comparison",
      "icon": "‚öñÔ∏è"
    },
    "reviews": {
      "name": "Reviews",
      "description": "Product and tool reviews",
      "defaultTemplate": "guide",
      "icon": "‚≠ê"
    },
    "case-studies": {
      "name": "Case Studies",
      "description": "Real-world implementation stories",
      "defaultTemplate": "guide",
      "icon": "üìä"
    }
  }
}
