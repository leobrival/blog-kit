{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://blog-kit.dev/schemas/frontmatter.json",
  "title": "Article Frontmatter",
  "description": "Article frontmatter with SEO and GEO fields",
  "type": "object",
  "required": ["title", "description", "date"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Article title",
      "minLength": 20,
      "maxLength": 70
    },
    "description": {
      "type": "string",
      "description": "Article meta description",
      "minLength": 120,
      "maxLength": 160
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Publication date (YYYY-MM-DD)"
    },
    "author": {
      "type": "string",
      "description": "Article author name"
    },
    "tags": {
      "type": "array",
      "description": "Article tags",
      "items": {
        "type": "string"
      },
      "minItems": 3,
      "maxItems": 10
    },
    "category": {
      "type": "string",
      "description": "Primary category"
    },
    "readingTime": {
      "type": "integer",
      "description": "Estimated reading time in minutes",
      "minimum": 1
    },
    "seo": {
      "type": "object",
      "description": "SEO optimization fields",
      "required": ["primaryKeyword"],
      "properties": {
        "primaryKeyword": {
          "type": "string",
          "description": "Primary target keyword"
        },
        "secondaryKeywords": {
          "type": "array",
          "description": "Secondary target keywords",
          "items": {
            "type": "string"
          },
          "minItems": 3,
          "maxItems": 7
        },
        "lsiKeywords": {
          "type": "array",
          "description": "LSI (Latent Semantic Indexing) keywords",
          "items": {
            "type": "string"
          }
        },
        "searchIntent": {
          "type": "string",
          "enum": ["informational", "navigational", "commercial", "transactional"],
          "description": "Primary search intent"
        },
        "targetLength": {
          "type": "object",
          "properties": {
            "min": {
              "type": "integer",
              "minimum": 0
            },
            "max": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "geo": {
      "type": "object",
      "description": "GEO (Generative Engine Optimization) fields",
      "properties": {
        "optimized": {
          "type": "boolean",
          "description": "Whether article is GEO-optimized"
        },
        "methods": {
          "type": "array",
          "description": "Princeton methods applied",
          "items": {
            "type": "string",
            "enum": ["cite-sources", "quotations", "statistics"]
          }
        },
        "authorityScore": {
          "type": "integer",
          "description": "E-E-A-T authority score (1-10)",
          "minimum": 1,
          "maximum": 10
        },
        "quotations": {
          "type": "object",
          "properties": {
            "min": {
              "type": "integer",
              "minimum": 0
            },
            "max": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "statistics": {
          "type": "object",
          "properties": {
            "min": {
              "type": "integer",
              "minimum": 0
            },
            "max": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "sources": {
          "type": "object",
          "properties": {
            "min": {
              "type": "integer",
              "minimum": 0
            },
            "max": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "image": {
      "type": "object",
      "description": "Featured image",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "alt": {
          "type": "string"
        },
        "caption": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}
