{
  "$schema": "../schemas/components.schema.json",
  "componentId": "comparison-table",
  "name": "Comparison Table",
  "description": "Feature comparison table for tools, frameworks, or approaches",
  "category": "data",
  "markdownTemplate": "| {headers[0]} | {headers[1]} | {headers[2]} |\n|{separator}|\n{rows}",
  "properties": {
    "headers": {
      "type": "array",
      "required": true,
      "description": "Table header labels",
      "minItems": 2,
      "maxItems": 6
    },
    "rows": {
      "type": "array",
      "required": true,
      "description": "Table rows (array of arrays)",
      "minItems": 3
    },
    "caption": {
      "type": "string",
      "required": false,
      "description": "Table caption or title"
    },
    "alignment": {
      "type": "array",
      "required": false,
      "description": "Column alignments (left, center, right)",
      "enum": ["left", "center", "right"]
    }
  },
  "validation": {
    "minRows": 3,
    "minColumns": 2,
    "maxColumns": 6,
    "requireHeaders": true
  },
  "geoOptimized": false,
  "guidelines": [
    "Keep tables concise (3-10 rows ideal)",
    "Use clear, scannable headers",
    "Avoid overly complex tables (max 5-6 columns)",
    "Use checkmarks (✅/❌) for boolean values",
    "Add a caption to explain what's being compared"
  ],
  "examples": [
    {
      "caption": "React vs Vue: Framework Comparison",
      "headers": ["Feature", "React", "Vue"],
      "rows": [
        ["Learning Curve", "Moderate", "Easy"],
        ["Performance", "Excellent", "Excellent"],
        ["Community Size", "Very Large", "Large"],
        ["TypeScript Support", "✅ Excellent", "✅ Good"],
        ["Mobile (Native)", "✅ React Native", "❌ Limited"]
      ]
    }
  ]
}
