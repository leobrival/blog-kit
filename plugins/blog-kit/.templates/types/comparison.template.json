{
  "$schema": "../schemas/article.schema.json",
  "templateId": "comparison",
  "version": "1.0.0",
  "name": "Comparison (X vs Y)",
  "description": "Feature-by-feature comparison of tools, frameworks, or approaches",
  "metadata": {
    "category": "comparison",
    "difficulty": "intermediate",
    "estimatedLength": "1500-2500 words",
    "estimatedReadingTime": "6-10 minutes",
    "targetAudience": "decision-makers and developers evaluating options"
  },
  "structure": {
    "sections": [
      {
        "id": "intro",
        "heading": "Introduction: {X} vs {Y}",
        "required": true,
        "level": "h2",
        "description": "Overview of what's being compared and why",
        "guidelines": [
          "Introduce both options briefly",
          "Explain why this comparison matters",
          "State who should care about this comparison"
        ],
        "targetLength": {
          "min": 150,
          "max": 300
        },
        "components": {
          "allowed": ["statistic", "quotation", "callout"],
          "required": []
        }
      },
      {
        "id": "overview-x",
        "heading": "What is {X}?",
        "required": true,
        "level": "h2",
        "description": "Brief overview of the first option",
        "guidelines": [
          "Explain what it is and its primary use case",
          "Mention key features or characteristics",
          "Provide context on popularity or adoption"
        ],
        "targetLength": {
          "min": 150,
          "max": 300
        },
        "components": {
          "allowed": ["quotation", "statistic"],
          "required": []
        }
      },
      {
        "id": "overview-y",
        "heading": "What is {Y}?",
        "required": true,
        "level": "h2",
        "description": "Brief overview of the second option",
        "guidelines": [
          "Explain what it is and its primary use case",
          "Mention key features or characteristics",
          "Provide context on popularity or adoption"
        ],
        "targetLength": {
          "min": 150,
          "max": 300
        },
        "components": {
          "allowed": ["quotation", "statistic"],
          "required": []
        }
      },
      {
        "id": "comparison-table",
        "heading": "Quick Comparison: {X} vs {Y}",
        "required": true,
        "level": "h2",
        "description": "High-level feature comparison table",
        "guidelines": [
          "Include 5-10 key comparison criteria",
          "Present information objectively",
          "Use clear, concise data points"
        ],
        "components": {
          "allowed": ["comparison-table", "callout"],
          "required": ["comparison-table"]
        }
      },
      {
        "id": "detailed-comparison",
        "heading": "Detailed Feature Comparison",
        "required": true,
        "level": "h2",
        "description": "In-depth comparison of key features",
        "guidelines": [
          "Compare 4-6 major features in detail",
          "Provide examples where helpful",
          "Remain objective and factual"
        ],
        "subsections": {
          "min": 4,
          "max": 6,
          "pattern": "{Feature Name}",
          "level": "h3"
        },
        "components": {
          "allowed": ["code-block", "quotation", "statistic", "callout", "comparison-table"],
          "required": []
        }
      },
      {
        "id": "pros-cons",
        "heading": "Pros and Cons",
        "required": true,
        "level": "h2",
        "description": "Advantages and disadvantages of each option",
        "guidelines": [
          "List 3-5 pros and cons for each",
          "Be balanced and objective",
          "Focus on practical implications"
        ],
        "subsections": {
          "min": 2,
          "max": 2,
          "pattern": "{X/Y}: Advantages and Disadvantages",
          "level": "h3"
        },
        "components": {
          "allowed": ["pros-cons", "callout"],
          "required": ["pros-cons"]
        }
      },
      {
        "id": "use-cases",
        "heading": "When to Use Each",
        "required": true,
        "level": "h2",
        "description": "Specific scenarios where each option excels",
        "guidelines": [
          "Provide 2-3 clear use cases for each",
          "Help readers make informed decisions",
          "Include real-world examples"
        ],
        "subsections": {
          "min": 2,
          "max": 2,
          "pattern": "When to Choose {X/Y}",
          "level": "h3"
        },
        "components": {
          "allowed": ["callout", "quotation"],
          "required": []
        }
      },
      {
        "id": "performance",
        "heading": "Performance Comparison",
        "required": false,
        "level": "h2",
        "description": "Performance benchmarks and analysis",
        "guidelines": [
          "Include relevant performance metrics",
          "Cite credible benchmarks",
          "Explain practical implications"
        ],
        "components": {
          "allowed": ["statistic", "comparison-table", "callout"],
          "required": ["statistic"]
        }
      },
      {
        "id": "community",
        "heading": "Community and Ecosystem",
        "required": false,
        "level": "h2",
        "description": "Comparison of community support, documentation, and ecosystem",
        "guidelines": [
          "Compare community size and activity",
          "Assess documentation quality",
          "Mention ecosystem maturity"
        ],
        "components": {
          "allowed": ["statistic", "quotation"],
          "required": []
        }
      },
      {
        "id": "conclusion",
        "heading": "Conclusion: Which Should You Choose?",
        "required": true,
        "level": "h2",
        "description": "Final recommendation and decision framework",
        "guidelines": [
          "Summarize key differences",
          "Provide a clear decision framework",
          "Avoid definitively declaring a 'winner' unless clearly justified"
        ],
        "targetLength": {
          "min": 200,
          "max": 400
        },
        "components": {
          "allowed": ["callout", "quotation"],
          "required": []
        }
      },
      {
        "id": "faq",
        "heading": "Frequently Asked Questions",
        "required": false,
        "level": "h2",
        "description": "Common questions about the comparison",
        "guidelines": [
          "Include 3-5 relevant questions",
          "Address migration, compatibility, cost, etc.",
          "Provide clear, concise answers"
        ],
        "components": {
          "allowed": ["faq-item"],
          "required": ["faq-item"]
        }
      }
    ]
  },
  "validation": {
    "wordCount": {
      "min": 1500,
      "max": 2500,
      "optimal": 2000
    },
    "seo": {
      "primaryKeyword": {
        "required": true,
        "pattern": "{X} vs {Y}",
        "density": {
          "min": 0.5,
          "max": 2.0
        }
      },
      "secondaryKeywords": {
        "min": 3,
        "max": 5
      },
      "searchIntent": "commercial",
      "targetLength": {
        "min": 1500,
        "max": 2500
      },
      "headings": {
        "h2Min": 7,
        "h2Max": 11,
        "h3Min": 6
      }
    },
    "geo": {
      "optimizationLevel": "moderate",
      "requiredMethods": ["cite-sources", "quotations", "statistics"],
      "quotations": {
        "min": 2,
        "max": 4,
        "placement": "intro, detailed comparison, or conclusion"
      },
      "statistics": {
        "min": 2,
        "max": 5,
        "placement": "performance, community, or overview sections"
      },
      "sources": {
        "min": 5,
        "max": 8,
        "types": ["official documentation", "benchmarks", "industry reports", "expert opinions"]
      },
      "eeeat": {
        "experience": "Show practical knowledge of both options",
        "expertise": "Demonstrate understanding of use cases",
        "authoritativeness": "Cite official sources and benchmarks",
        "trustworthiness": "Maintain objectivity and balance"
      }
    },
    "components": {
      "comparisonTable": {
        "min": 1,
        "max": 3,
        "required": true
      },
      "prosCons": {
        "min": 1,
        "max": 1,
        "required": true
      },
      "quotation": {
        "min": 2,
        "max": 4
      },
      "statistic": {
        "min": 2,
        "max": 5
      },
      "callout": {
        "min": 0,
        "max": 4
      }
    },
    "structure": {
      "enforceOrder": true,
      "requiredSections": ["intro", "overview-x", "overview-y", "comparison-table", "detailed-comparison", "pros-cons", "use-cases", "conclusion"],
      "optionalSections": ["performance", "community", "faq"]
    }
  },
  "constitution": {
    "tone": "convivial",
    "voiceDo": [
      "Maintain objectivity and balance",
      "Present facts and data, not opinions",
      "Acknowledge strengths and weaknesses of both options",
      "Help readers make informed decisions",
      "Use clear comparison criteria",
      "Cite credible sources for claims"
    ],
    "voiceDont": [
      "Show bias towards one option",
      "Make absolute statements without evidence",
      "Ignore context or use cases",
      "Use inflammatory or dismissive language",
      "Oversimplify complex trade-offs"
    ]
  },
  "examples": [
    {
      "title": "React vs Vue: Complete Framework Comparison 2025",
      "wordCount": 2100,
      "url": "example-url"
    },
    {
      "title": "PostgreSQL vs MySQL: Which Database Should You Choose?",
      "wordCount": 1900,
      "url": "example-url"
    }
  ]
}
